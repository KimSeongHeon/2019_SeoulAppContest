<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".HowToActivity">
    <TabHost
            android:id="@+id/howto_tabHost1"
            android:layout_width="match_parent"
            android:layout_height="0dp" android:layout_weight="10.8">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <!-- TabWidget의 id값이 반드시 "tabs"로 지정되어야 함. -->
            <TabWidget
                    android:id="@android:id/tabs"
                    android:layout_width="match_parent"
                    android:background="#FADEC5"
                    android:layout_height="50dp" />

            <!-- FrameLayout의 id값이 반드시 "tabcontent"로 지정되어야 함. -->
            <FrameLayout
                    android:id="@android:id/tabcontent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <!-- 첫 번째 페이지. content1 -->
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="match_parent"
                              android:id="@+id/howto_content0"
                              android:orientation="vertical">
                    <TextView android:layout_width="match_parent" android:gravity="center" android:textStyle="bold" android:textColor="#000000" android:layout_height="match_parent" android:id="@+id/account_text0"/>

                </LinearLayout>
                <!-- 첫 번째 페이지. content1 -->
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="match_parent"
                              android:id="@+id/howto_content1"
                              android:orientation="vertical">
                    <TextView android:layout_width="match_parent" android:gravity="center" android:textStyle="bold" android:textColor="#000000" android:layout_height="match_parent" android:id="@+id/account_text1"/>

                </LinearLayout>

                <!-- 두 번째 페이지. content2 -->
                <LinearLayout
                        android:id="@+id/howto_content2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                    <TextView android:layout_width="match_parent" android:gravity="center" android:textStyle="bold" android:textColor="#000000" android:layout_height="match_parent"
                              android:id="@+id/account_text2"/>


                </LinearLayout>
                <!-- 두 번째 페이지. content2 -->
                <LinearLayout
                        android:id="@+id/howto_content3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                    <TextView android:layout_width="match_parent" android:gravity="center" android:textStyle="bold" android:textColor="#000000" android:layout_height="match_parent"
                              android:id="@+id/account_text3"/>


                </LinearLayout>
                <!-- 두 번째 페이지. content2 -->
                <LinearLayout
                        android:id="@+id/howto_content4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                    <TextView android:layout_width="match_parent" android:gravity="center" android:textStyle="bold" android:textColor="#000000" android:layout_height="match_parent"
                              android:id="@+id/account_text4"/>


                </LinearLayout>

            </FrameLayout>
        </LinearLayout>
    </TabHost>
    <Button android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:id="@+id/account_button" android:text="확 인" android:gravity="center" android:textStyle="bold" android:textColor="#000000"/>

</LinearLayout>