<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:padding="5dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

<LinearLayout

        android:layout_width="match_parent"
        android:background="@drawable/textview_corner6"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

<LinearLayout
              android:layout_width="0dp"
              android:layout_weight="5"
              android:background="@drawable/textview_corner6"
              android:orientation="vertical"
              android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:orientation="horizontal">
        <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1.5"
                  android:src="@drawable/distance"
                  android:gravity="center" android:textStyle="bold" android:textColor="#000000"
                  android:text="좌석과의 거리" android:textSize="14dp"
                  android:background="@drawable/edge"
                  android:scaleType="fitCenter" android:layout_gravity="center"/>
    <TextView android:layout_width="0dp" android:layout_height="match_parent"
              android:layout_weight="2" android:src="@drawable/distance"
              android:gravity="center" android:textColor="#000000"
              android:textStyle="bold" android:id="@+id/receive_distance_textview"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:orientation="horizontal">
        <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1.5" android:src="@drawable/distance"
                  android:background="@drawable/edge"
                  android:gravity="center" android:textStyle="bold"  android:textColor="#000000" android:textSize="14dp"
                  android:text="하차 역"
                  android:scaleType="fitCenter" android:layout_gravity="center"/>
    <TextView android:layout_width="0dp" android:layout_height="match_parent"
              android:id="@+id/receive_dest_textview"
              android:gravity="center" android:textColor="#000000"
              android:layout_weight="2" />
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:orientation="horizontal">
        <TextView android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1.5" android:src="@drawable/distance"
                  android:background="@drawable/edge"
                  android:gravity="center" android:textStyle="bold"  android:textColor="#000000" android:textSize="14dp"
                  android:text="앉은 자리"
                  android:scaleType="fitCenter" android:layout_gravity="center"/>
        <TextView android:layout_width="0dp" android:layout_height="match_parent"
                  android:id="@+id/receive_seat_textview"
                  android:gravity="center" android:textColor="#000000"
                  android:layout_weight="2" />
    </LinearLayout>


</LinearLayout>
    <Button android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="자세히 보기"
            android:id="@+id/recieve_detail_button"
            android:layout_gravity="center"
            android:background="@drawable/button_corner"/>


</LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                 android:id="@+id/card_frame"
                  android:orientation="vertical"
                 android:layout_height="wrap_content">

        <ScrollView android:layout_width="match_parent"
                    android:background="@drawable/textview_corner6"
                    android:id="@+id/ca_scrollview"
                    android:layout_height="match_parent" android:layout_weight="8"
                    android:scrollbars="vertical">

            <HorizontalScrollView android:layout_width="match_parent"
                                  android:layout_gravity="center"
                                  android:id="@+id/card_layoutSeat"
                                  android:layout_height="match_parent"></HorizontalScrollView>
        </ScrollView>
        <ImageButton android:layout_width="match_parent"
                     android:src="@drawable/exchange"
                     android:layout_height="20dp"
                     android:visibility="gone"
                     android:layout_gravity="right|top"
                     android:id="@+id/card_turn_imagebutton"/>
    </LinearLayout>


</LinearLayout>

