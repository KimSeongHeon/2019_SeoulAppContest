<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_margin="2dp"
        android:id="@+id/info_linear"
        android:orientation="horizontal" xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical">
        <LinearLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:orientation="horizontal" android:background="@drawable/button_corner">
            <TextView
                    android:text="열차 위치"
                    android:textColor="#000000"
                    android:background="@drawable/textview_corner2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textStyle="bold"/>
            <TextView
                    android:id="@+id/inner_train_location_text"
                    android:layout_width="0dp"
                    android:textColor="#000000"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:orientation="horizontal" android:background="@drawable/button_corner">
            <TextView
                    android:text="열차 방향"
                    android:textColor="#000000"
                    android:background="@drawable/textview_corner2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textStyle="bold"/>
            <TextView
                    android:textColor="#000000"
                    android:id="@+id/inner_train_direction_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"/>
            <TextView
                    android:text="열차 번호"
                    android:background="@drawable/textview_corner2"
                    android:layout_width="0dp"
                    android:textColor="#000000"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textStyle="bold"/>
            <TextView
                    android:id="@+id/inner_trainno_text"
                    android:layout_width="0dp"
                    android:textColor="#000000"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:orientation="horizontal" android:background="@drawable/button_corner">
            <TextView
                    android:text="열차 행"
                    android:background="@drawable/textview_corner2"
                    android:layout_width="0dp"
                    android:textColor="#000000"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textStyle="bold"/>
            <TextView
                    android:id="@+id/inner_train_dest_text"
                    android:layout_width="0dp"
                    android:textColor="#000000"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"/>
            <TextView
                    android:text="급행 여부"
                    android:background="@drawable/textview_corner2"
                    android:layout_width="0dp"
                    android:textColor="#000000"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textStyle="bold"/>
            <TextView
                    android:id="@+id/inner_directat_textview"
                    android:layout_width="0dp"
                    android:textColor="#000000"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:orientation="horizontal" android:background="@drawable/button_corner">
            <TextView
                    android:text="기준 시간"
                    android:background="@drawable/textview_corner2"
                    android:textColor="#000000"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textStyle="bold"/>
            <TextView
                    android:id="@+id/inner_train_time_text"
                    android:textColor="#000000"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center"/>

        </LinearLayout>
    </LinearLayout>
    <ImageButton
            android:id="@+id/select_button"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/button_corner"
            android:src="@drawable/tap"
            android:scaleType="fitCenter"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"/>
</LinearLayout>
